{
  "info": {
    "name": "Mixtli API - JWT + Roles",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Salud",
      "request": {
        "method": "GET",
        "url": {
          "raw": "https://mixtli-pro.onrender.com/salud",
          "protocol": "https",
          "host": [
            "mixtli-pro",
            "onrender",
            "com"
          ],
          "path": [
            "salud"
          ]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mixtli.local\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "https://mixtli-pro.onrender.com/auth/login",
              "protocol": "https",
              "host": [
                "mixtli-pro",
                "onrender",
                "com"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j=pm.response.json(); if(j.token){ pm.environment.set('admin_token', j.token);}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@mixtli.local\",\n  \"password\": \"User123!\"\n}"
            },
            "url": {
              "raw": "https://mixtli-pro.onrender.com/auth/login",
              "protocol": "https",
              "host": [
                "mixtli-pro",
                "onrender",
                "com"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j=pm.response.json(); if(j.token){ pm.environment.set('user_token', j.token);}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
