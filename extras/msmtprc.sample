# /etc/msmtprc â€” ejemplo para SendGrid (SMTP)
# Cambia <API_KEY> y el remitente. Luego: chmod 600 /etc/msmtprc
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

account        sendgrid
host           smtp.sendgrid.net
port           587
user           apikey
password       <API_KEY>
from           notificaciones@tudominio.com

account default : sendgrid

