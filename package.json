{
  "name": "mixtli-api",
  "version": "1.0.0",
  "description": "API Express + Prisma (PostgreSQL) con endpoints /salud y /api/users",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "build:deploy": "npm install && npx prisma generate && npx prisma db push && npx prisma db seed"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "prisma": "^5.22.0",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}