{
  "info": {
    "name": "Mixtli \u2013 Upload Direct (S3 via server)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Salud",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/salud"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Uploader\", \"email\": \"uploader+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/register"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"uploader+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "pm.environment.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Upload Direct (multipart form-data)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{BASE_URL}}/api/upload",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        }
      }
    }
  ]
}