{
  "info": {
    "name": "Mixtli \u2013 Uploads S3 (presigned)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Salud",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/salud"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Uploader\", \"email\": \"uploader+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/register"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"uploader+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "pm.environment.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Presign upload",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"filename\": \"foto.jpg\", \"contentType\": \"image/jpeg\"}"
        },
        "url": "{{BASE_URL}}/api/uploads/presign"
      }
    },
    {
      "name": "Verify upload (HEAD via API)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/uploads/verify?key={{lastKey}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "uploads",
            "verify"
          ],
          "query": [
            {
              "key": "key",
              "value": "{{lastKey}}"
            }
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Guarda key si la respuesta tiene upload.key",
          "if (pm.response.code === 200) {",
          "  try {",
          "    const data = pm.response.json();",
          "    if (data && data.upload && data.upload.key) {",
          "      pm.environment.set('lastKey', data.upload.key);",
          "    }",
          "  } catch (e) {}",
          "}"
        ]
      }
    }
  ]
}