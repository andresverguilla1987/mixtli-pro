{
  "info": {
    "name": "Mixtli API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base}}/api/health",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/auth/register",
          "host": [
            "{{base}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/auth/login",
          "host": [
            "{{base}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret\"\n}"
        }
      }
    },
    {
      "name": "Presign",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/upload/presign",
          "host": [
            "{{base}}"
          ],
          "path": [
            "upload",
            "presign"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"filename\": \"archivo.pdf\",\n  \"size\": 12345,\n  \"mime\": \"application/pdf\",\n  \"ttlDays\": 14\n}"
        }
      }
    },
    {
      "name": "Complete",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/upload/complete",
          "host": [
            "{{base}}"
          ],
          "path": [
            "upload",
            "complete"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"uploadId\": \"PUT_ID\",\n  \"etag\": \"PUT_ETAG\"\n}"
        }
      }
    },
    {
      "name": "Get Link",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/upload/{{uploadId}}/link",
          "host": [
            "{{base}}"
          ],
          "path": [
            "upload",
            "{{uploadId}}",
            "link"
          ]
        }
      }
    },
    {
      "name": "Send Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/email/send",
          "host": [
            "{{base}}"
          ],
          "path": [
            "email",
            "send"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"uploadId\": \"{{uploadId}}\",\n  \"to\": \"dest@ejemplo.com\",\n  \"message\": \"Te comparto el archivo.\"\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:10000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "uploadId",
      "value": ""
    }
  ]
}