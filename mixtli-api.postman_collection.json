{
  "info": {
    "name": "Mixtli API - Autosend",
    "_postman_id": "f1c1b3e1-aaaa-bbbb-cccc-0000autosend",
    "description": "Colecci\u00f3n lista para 'Enviar y que funcione'.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "{{HOST}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/salud",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "salud"
          ]
        }
      }
    },
    {
      "name": "List users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/users",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "users"
          ]
        }
      }
    },
    {
      "name": "Create user",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const ts = Date.now();",
              "pm.variables.set('RANDOM_EMAIL', `demo_${ts}@example.com`);",
              "pm.variables.set('RANDOM_PASS', '123456');"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{RANDOM_EMAIL}}\",\n  \"password\": \"{{RANDOM_PASS}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/users",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "users"
          ]
        }
      }
    },
    {
      "name": "Update user (email)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"update_{{RANDOM_EMAIL}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/users/1",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "users",
            "1"
          ]
        }
      }
    },
    {
      "name": "Delete user",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/users/1",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "users",
            "1"
          ]
        }
      }
    }
  ]
}