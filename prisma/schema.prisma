generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int      @id @default(autoincrement())
  nombre       String
  email        String   @unique
  passwordHash String?  // <- opcional (por ahora no lo usamos pero el client lo espera)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt   // <- Prisma la gestiona automÃ¡ticamente
}
