{
  "info": {
    "name": "Mixtli \u2013 Full API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Salud",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/salud"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Mixtli\", \"email\": \"mixtli+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/register"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"mixtli+{{ts}}@test.com\", \"password\": \"mixtli123\"}"
        },
        "url": "{{BASE_URL}}/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "pm.environment.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Users \u2013 List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{BASE_URL}}/api/users"
      }
    },
    {
      "name": "Users \u2013 Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Uno\", \"email\": \"uno+{{ts}}@test.com\"}"
        },
        "url": "{{BASE_URL}}/api/users"
      }
    },
    {
      "name": "Upload \u2013 Direct (form-data)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{BASE_URL}}/api/upload",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        }
      }
    },
    {
      "name": "Uploads \u2013 Presign",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"filename\": \"prueba-{{ts}}.txt\", \"contentType\": \"text/plain\"}"
        },
        "url": "{{BASE_URL}}/api/uploads/presign"
      }
    }
  ]
}